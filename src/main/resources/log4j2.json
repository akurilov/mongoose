					"AppenderRef" : {
						"ref" : "3rdPartyFile"
					},
					"additivity" : false
				},
				{
					"name" : "io.netty.channel.AbstractChannel",
					"level" : "ERROR",
					"AppenderRef" : {
						"ref" : "3rdPartyFile"
					},
					"additivity" : false
				},
				{
					"name" : "com.emc.mongoose.logging.Cli",
					"level" : "INFO",
					"AppenderRef" : {
						"ref" : "cliFile"
					},
					"additivity" : false
